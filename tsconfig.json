{
    "include": ["src"],
    "exclude": [
      "dist",
      "node_modules"
    ],
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "lib": ["dom", "esnext"],
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
    }
}