{
	"files": ["src/Fsm.ts", "src/FsmBuilder.ts"],
	"compileOnSave": false,
	"moduleResolution": "node",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2015",
		"module": "es2015",
		"lib": [
			"es2017",
			"dom"
		],
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"noLib": false,
		"declaration": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "m"
	}
}